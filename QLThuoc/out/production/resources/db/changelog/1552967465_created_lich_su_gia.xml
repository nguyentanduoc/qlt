<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
	<changeSet id="01" author="ntduoc">
		<createTable tableName="lich_su_gia">
			<column name="ma_san_pham" type="bigint">
				<constraints nullable="false"/>
			</column>
			<column name="ma_chi_nhanh" type="bigint">
				<constraints nullable="false"/>
			</column>
			<column name="ngay_thay_doi" type="datetime">
				<constraints nullable="false"/>
			</column>
			<column name="don_gia" type="double">
				<constraints nullable="false"/>
			</column>
		</createTable>
		<addUniqueConstraint catalogName="cat" columnNames="ma_san_pham, ma_chi_nhanh, ngay_thay_doi"
			constraintName="const_lich_su_gia" deferrable="true" disabled="true" initiallyDeferred="true"
			schemaName="public" tableName="lich_su_gia" />
