			constraintName="fk_ma_san_phan_lich_su_gia" deferrable="true" initiallyDeferred="true" onDelete="CASCADE" onUpdate="RESTRICT"
			referencedColumnNames="ma" referencedTableName="san_pham" />
		<addForeignKeyConstraint baseColumnNames="ma_chi_nhanh" baseTableName="lich_su_gia"
			constraintName="fk_ma_chi_nhanh_lich_su_gia" deferrable="true" initiallyDeferred="true" onDelete="CASCADE" onUpdate="RESTRICT"
			referencedColumnNames="ma" referencedTableName="chi_nhanh" />
	</changeSet>
</databaseChangeLog>