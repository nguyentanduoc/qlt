<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
	http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<property name="now" value="current_timestamp"
		dbms="postgresql" />

	<changeSet author="ntduoc" id="201812202251-1">
		<createTable tableName="tai_khoan">
			<column name="id" type="bigserial">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="ten_dang_nhap" type="varchar(254)">
				<constraints nullable="false" />
			</column>
			<column name="email" type="varchar(254)" />
			<column name="mat_khau" type="varchar(254)">
				<constraints nullable="false" />
			</column>
			<column name="date_create" type="timestamp"
				defaultValueComputed="${now}">
				<constraints nullable="false" />
			</column>
			<column name="ngay_cap_nhat" type="timestamp"
				defaultValueComputed="${now}">
				<constraints nullable="false" />
			</column>
			<column name="provider" type="varchar(254)">
				<constraints nullable="true" />
			</column>
			<column name="provider_id" type="varchar(254)">
				<constraints nullable="true" />
			</column>
			<column name="xac_thuc_email" type="BOOLEAN">
				<constraints nullable="false" />
			</column>
			
			<column name="hoat_dong" type="BOOLEAN">
				<constraints nullable="false" />
			</column>
			<column name="image_url" type="varchar(254)">
				<constraints nullable="true" />
			</column>
		</createTable>

		<createTable tableName="quyen_cua_tai_khoan">
			<column name="tai_khoan_id" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="code_quyen" type="varchar(100)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<addForeignKeyConstraint
			constraintName="fk_quyen_cua_tai_khoan_tai_khoan_id"
			baseTableName="quyen_cua_tai_khoan" baseColumnNames="tai_khoan_id"
			referencedTableName="tai_khoan" referencedColumnNames="id" />
		<addForeignKeyConstraint
			constraintName="fk_quyen_cua_tai_khoan_code_quyen"
			baseTableName="quyen_cua_tai_khoan" baseColumnNames="code_quyen"
			referencedTableName="quyen" referencedColumnNames="code_quyen" />

		<loadData encoding="UTF-8"
	file="liquibase/csv/201812202251_01_tai_khoan.csv"
	tableName="tai_khoan">
			<column header="ten_dang_nhap" name="ten_dang_nhap"
				type="STRING" />
			<column header="mat_khau" name="mat_khau" type="string" />
			<column header="hoat_dong" name="hoat_dong" type="BOOLEAN"
				defaultValueComputed="false" />
			<column header="xac_thuc_email" name="xac_thuc_email" type="BOOLEAN"
				defaultValueComputed="false" />
		</loadData>

		<loadData encoding="UTF-8"
			file="liquibase/csv/201812202251_02_quyen_cua_tai_khoan.csv"
			tableName="quyen_cua_tai_khoan">
			<column header="tai_khoan_id" name="tai_khoan_id"
				type="NUMERIC" />
			<column header="code_quyen" name="code_quyen" type="string" />
		</loadData>
	</changeSet>
</databaseChangeLog>